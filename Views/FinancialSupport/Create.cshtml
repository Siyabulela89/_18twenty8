@model _18TWENTY8.Models.FinancialSupport
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<div role="main" class="main">

    <section class="page-header page-header-modern bg-color-light-scale-1 border-0 m-0 page-header-md">
        <div class="container">
            <div class="row">

                <div class="col-md-12 align-self-center p-static order-2 text-center">


                </div>

                <div class="col-md-12 align-self-center order-1">


                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container py-4">
            <div class="col">
                <div class="row">
                    <div class="col text-center">
                        <h2 style="color:#a62237" class="font-weight-normal mb-5">Let’s help fund your studies</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-2">
        <form asp-action="Create" role="form" class="needs-validation" enctype="multipart/form-data">
            <div class="row">
                <input hidden asp-for="UserID" class="form-control" required type="text" value="@ViewBag.UserID">
                <div class="col-lg-12 mt-4 mt-lg-0">

                    <div class="d-flex">
                        <div class="profile-image-outer-container" data-provides="fileupload">
                            <div class="profile-image-inner-container bg-color-primary">
                                <img id="output" src="~/img/avatars/avatar.png" />
                                <span class="profile-image-button bg-color-dark">
                                    <i class="fas fa-camera text-dark"></i>
                                </span>
                            </div>

                            <input type="file" required class="profile-image-input" name="pc" id="pc" onchange="loadFile(event)" />

                        </div>


                        <h2 class="font-weight-normal text-7 mb-0"><strong class="font-weight-extra-bold">My </strong>finance application profile</h2>
                    </div>
                    <br />
                    <p style="color:red;" class="label-danger">@ViewBag.Errorpc</p>
                    <p style="color:red;" id="filesz" class="label-danger"></p>

                </div>
                <div class="col-lg-12">

                    <div class="overflow-hidden mb-1">
                     
                    </div>
                    <div class="overflow-hidden mb-4 pb-3">

                    </div>


                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Name</label>
                        <div class="col-lg-12">
                            <input asp-for="Name" class="form-control" required type="text" value="@ViewBag.fullname">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">ID number</label>
                        <div class="col-lg-12">
                            <input asp-for="IdNr_Passport" class="form-control" required type="text" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Cell phone number</label>
                        <div class="col-lg-12">
                            <input asp-for="CellphoneNr" class="form-control" required type="text" value="">
                        </div>
                        <div class="col-lg-12"><p>Please ensure that your cell phone number is correct before you proceed, the number will be used to send you a verfication code to complete your registration.</p></div>
                    </div>
                    <div class="form-group row">


                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Email</label>
                        <div class="col-lg-12">
                            <input asp-for="Email" class="form-control" required type="text" value="@ViewBag.email">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Personal Bio (500 Words max)</label>
                        <div class="col-lg-12">
                            <textarea rows="6" asp-for="PersonalBio" class="form-control" required type="text" value=""></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload CV (2 pages)</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Select or change file</span>
                                    @*<span class="fileupload-new">Select file</span>*@
                                    <input type="file" name="CV" id="CV" />
                                </span>

                            </div>
                            <p style="color:red">@ViewBag.Errorcv</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload Certified ID</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Select or change file</span>
                                    @*<span class="fileupload-new">Select file</span>*@
                                    <input type="file" name="CID" id="CID" />
                                </span>

                            </div>
                            <p style="color:red">@ViewBag.Errorid</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload latest Academic transcripts</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Select or change file</span>
                                    @*<span class="fileupload-new">Select file</span>*@
                                    <input required type="file" name="QA" id="QA" />
                                </span>

                            </div>
                            <p style="color:red">@ViewBag.Errorqa</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload student fees statement</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Select or change file</span>
                                    @*<span class="fileupload-new">Select file</span>*@
                                    <input required type="file" name="QA2" id="QA2" />
                                </span>

                            </div>
                        </div>
                        <p style="color:red">@ViewBag.Errorqa2</p>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload 1 minute video explaining who you are, what you are studying, how the funding will help you, how you will use your qualification to help others and why you approached 18twenty8 to assist.</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Select or change file</span>
                                    @*<span class="fileupload-new">Select file</span>*@
                                    <input required type="file" name="CVV" id="CVV" />
                                </span>

                            </div>
                        </div>
                        <p style="color:red">@ViewBag.Errorcvv</p>
                        <p id="fileszz" style="color:red"></p>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload proof of registration</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Select or change file</span>
                                    @*<span class="fileupload-new">Select file</span>*@
                                    <input required type="file" name="POR" id="POR" />
                                </span>

                            </div>
                        </div>
                        <p style="color:red">@ViewBag.Errorpor</p>
                    </div>
                    <div class="form-group row">
                        <div class="form-group col-lg-9">

                        </div>
                        <div class="form-group col-lg-3">
                            <input type="submit" value="Save" class="btn btn-primary btn-modern float-right" data-loading-text="Submitting...">
                        </div>
                    </div>


                </div>

            </div>
        </form>
    </div>

</div>





<script>

    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);


    };




</script>
<script type="text/javascript">
    $('#pc').on('change', function () {

        const size =
            (this.files[0].size / 1024 / 1024).toFixed(2);

        if (size > 4 || size < 0) {
            $("#filesz").html('<b>' +
                'Your uploaded profile picture must not be bigger than 4mb' + '</b>');
        } else {
        
            loadFile(event);
        }
    });

</script>

<script type="text/javascript">
    $('#CVV').on('change', function () {

        const size =
            (this.files[0].size / 1024 / 1024).toFixed(2);

        if (size > 5 || size < 0) {
            $("#fileszz").html('<b>' +
                'Your uploaded video must not be bigger than 5mb' + '</b>');
        } else {
          
         
        }
    });

</script>