

@model _18TWENTY8.Models.BigSisterDetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div role="main" class="main">

    <section class="page-header page-header-modern bg-color-light-scale-1 border-0 m-0 page-header-md">
        <div class="container">
            <div class="row">

                <div class="col-md-12 align-self-center p-static order-2 text-center">


                </div>

                <div class="col-md-12 align-self-center order-1">


                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="col">
                <div class="row">
                    <div class="col text-center">
                        <h2 style="color:#a62237" class="font-weight-normal mb-5">Some small steps for you to be a Big Sister</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <form asp-action="Create" role="form" class="needs-validation" enctype="multipart/form-data">
            <div class="row">

                <input hidden asp-for="UserID" class="form-control" required type="text" value="@ViewBag.UserID">
                <div class="col-lg-12">

                    <div class="d-flex">
                        <div class="profile-image-outer-container" data-provides="fileupload">
                            <div class="profile-image-inner-container bg-color-primary">
                                <img id="output" src="~/img/avatars/avatar.png" />
                                <span class="profile-image-button bg-color-dark">
                                    <i class="fas fa-camera text-dark"></i>
                                </span>
                                <p style="color:red">@ViewBag.Errorpc</p>
                            </div>

                            <input type="file" required class="profile-image-input" name="pc" id="pc" onchange="loadFile(event)" />
                        </div>

                        <h2 class="font-weight-normal text-7">My Big Sister Profile</h2>

                    </div>



                </div>
                <div class="col-lg-12">


                    <div class="overflow-hidden mb-4 pb-3">

                    </div>


                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Full Names</label>
                        <div class="col-lg-12">
                            <input asp-for="Name" class="form-control" required type="text" value="@ViewBag.fullname">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">ID number</label>
                        <div class="col-lg-12">
                            <input asp-for="IDPassport" class="form-control" required type="text">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Email</label>
                        <div class="col-lg-12">
                            <input asp-for="email" class="form-control" required type="email" value="@ViewBag.email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Contact number(Cell)</label>
                        <div class="col-lg-12">

                            <input asp-for="Phonenumber" class="form-control" required type="tel" maxlength="10" minlength="10" onblur="if(this.value == '') { this.value ='e.g. 0825660869'; }" onfocus="if(this.value =='e.g. 0825660869') { this.value = ''; }" value="e.g. 0825660869">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Physical Address</label>
                        <div class="col-lg-12">
                            <input asp-for="AddressStreet" class="form-control" required type="text" placeholder="Street (96 4th St)">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2"></label>
                        <div class="col-lg-8">
                            <input asp-for="AddressStreetlinetwo" class="form-control" required type="text" value="" placeholder="Address line 2 (Parkmore, Sandton) ">
                        </div>
                        <div class="col-lg-4">
                            @Html.DropDownListFor(m => m.Province, ViewBag.Province as SelectList, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Postal Code</label>
                        <div class="col-lg-12">
                            <input asp-for="PostalCode" class="form-control" required type="text">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Emergency Contact 1</label>
                        <div class="col-lg-8">
                            <input asp-for="EmergencyContactNumberone" class="form-control" required type="text" placeholder="Phone Number">
                        </div>
                        <div class="col-lg-4">
                            <input asp-for="EmergencyContactNameone" class="form-control" required type="text" placeholder="Name of Person">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Emergency Contact 2</label>
                        <div class="col-lg-8">
                            <input asp-for="EmergencyContactNumbertwo" class="form-control" required type="text" placeholder="Phone Number">
                        </div>
                        <div class="col-lg-4">
                            <input asp-for="EmergencyContactNametwo" class="form-control" required type="text" placeholder="Name of Person">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">How did you hear about 18twenty8?</label>
                        <div class="col-lg-12">
                            <textarea asp-for="howdidyouhearabout" maxlength="5000" data-msg-required="This is field is required." rows="4"class="form-control" id="about18Q" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Tell us more about yourself (professional, academic and personal aspirations)</label>
                        <div class="col-lg-12">
                            <textarea asp-for="BackgroundQ" maxlength="5000" data-msg-required="This is field is required." rows="4"class="form-control" id="messagere" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Have you ever been a mentor or participated in mentor training?</label>
                        <div class="col-lg-12">
                            @Html.DropDownListFor(m => m.EverbeenamentorQ, ViewBag.Option as SelectList, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Please provide details if you answered yes to the question above</label>
                        <div class="col-lg-9">
                            <textarea asp-for="DetailsOnEverbeenMentorQ" maxlength="5000" data-msg-required="Please enter your message." rows="4"class="form-control" id="messaged"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Have you ever been arrested or convicted of a crime?</label>
                        <div class="col-lg-12">
                            @Html.DropDownListFor(m => m.ArrestedConvictedQ, ViewBag.Option as SelectList, htmlAttributes: new { @class = "form-control" })


                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Please provide details if you answered yes to the question above</label>
                        <div class="col-lg-12">
                            <textarea asp-for="DetailsArrestedConvictedQ" maxlength="5000"  rows="4"class="form-control" id="messagea"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">What would your 28 year-old self say to your 18 year-old self?</label>
                        <div class="col-lg-12">
                            <textarea asp-for="youngerselfQ" maxlength="5000" data-msg-required="Please enter your message." rows="4"class="form-control" id="messageu" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">What expectations do you have of your Little Sister?</label>
                        <div class="col-lg-12">
                            <textarea asp-for="Expectationsonlittlesister" maxlength="5000" data-msg-required="Please enter your message." rows="4"class="form-control" id="messagje" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Please provide details on the preferred university, degree programme and geographic area of Little Sister</label>
                        <div class="col-lg-12">
                            <textarea asp-for="prefferedstudentdetails" maxlength="5000" data-msg-required="Please enter your message." rows="4"class="form-control" id="message" required></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Hobbies (Please select all applicable options)</label>
                        <div class="col-lg-12">

                            @for (int i = 0; i < Model.Infosbig.Count; i++)
                            {
                                <input type="hidden" asp-for="@Model.Infosbig[i].Value" />
                                <input asp-for="Infosbig[i].Selected" /> @Model.Infosbig[i].Text <br />

                            }
                            
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Please give details if you chose other</label>
                        <div class="col-lg-12">
                            <textarea asp-for="HobbiesOther" maxlength="5000" data-msg-required="Please enter your message." rows="4"class="form-control" id="messhage" ></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">IN-PERSON MEETINGS: Our Little Sisters require varying levels of interaction with their Big Sisters. In order to accurately and realistically assess your availability, please take transportation time, your lifestyle, family, social, academic and work obligations into consideration when answering the following question. I anticipate being able to meet my Little Sister:</label>
                        <div class="col-lg-12">

                            @Html.DropDownListFor(m => m.Interactionlevelmeet, ViewBag.IntLevel as SelectList, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Please give details if you chose other</label>
                        <div class="col-lg-12">

                            <textarea asp-for="Interactionlevelmeetother" maxlength="5000" data-msg-required="Please enter your message." rows="4" class="form-control" id="message"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">COMMUNICATION: I anticipate being able to call / email / message my Little Sister:</label>
                        <div class="col-lg-12">

                            @Html.DropDownListFor(m => m.InteractionlevelDigCom, ViewBag.IntLevel as SelectList, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Please give details if you chose other</label>
                        <div class="col-lg-12">
                            <textarea asp-for="InteractionlevelDigComother" maxlength="5000" data-msg-required="Please enter your message." rows="4" class="form-control" id="message"></textarea>

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">ADDITIONAL SUPPORT. In addition to being a Big Sister, I would also like to (please select all applicable options): </label>
                        <div class="col-lg-12">

                            @for (int i = 0; i < Model.Addsupbig.Count; i++)
                            {
                                <input type="hidden" asp-for="@Model.Addsupbig[i].Value" />
                                <input asp-for="Addsupbig[i].Selected" /> @Model.Addsupbig[i].Text <br />

                            }

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2">Please give details if you chose other</label>
                        <div class="col-lg-12">
                            <textarea asp-for="Additionasupportother" maxlength="5000" data-msg-required="Please enter your message." rows="4" class="form-control" id="message"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-8 font-weight-bold text-dark col-form-label form-control-label text-2 required"> I confirm that I commit to being a Big Sister for no less than 12 months from the date of submission of this form</label>
                        <div class="col-lg-4">

                            <input asp-for="ConfirmMentordurationQ" class="form-control" required type="checkbox">
                        </div>

                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload CV</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Change</span>
                                    <span class="fileupload-new">Select file</span>
                                    <input type="file" required name="CV" id="CV" />

                                </span>
                                <p id="size"></p>

                            </div>
                        </div>
                        <p style="color:red">@ViewBag.Errorcv</p> 
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload Certified ID</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Change</span>
                                    <span class="fileupload-new">Select file</span>
                                    <input type="file" required name="CID" id="CID" />

                                </span>
                                <p id="sized"></p>

                            </div>
                        </div>
                        <p style="color:red"> @ViewBag.Errorid</p> 
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 font-weight-bold text-dark col-form-label form-control-label text-2">Upload Qualifications</label>
                        <div class="fileupload col-lg-9  fileupload-new" data-provides="fileupload">
                            <div class="input-append">
                                <div class="uneditable-input">
                                    <i class="fas fa-file fileupload-exists"></i>
                                    <span class="fileupload-preview"></span>
                                </div>

                                <span class="btn btn-default btn-file">
                                    <span class="fileupload-exists">Change</span>
                                    <span class="fileupload-new">Select file</span>
                                    <input type="file" required multiple name="QA" id="QA" />
                                </span>
                                <p id="sizedd"></p>
                            </div>
                        </div>
                        <p style="color:red">@ViewBag.Errorqa</p> 
                    </div>

                    <div class="form-group row">
                        <div class="form-group col-lg-9">

                        </div>
                        <div class="form-group col-lg-3">
                            <input type="submit" value="Save" class="btn btn-primary btn-modern float-right" data-loading-text="Submitting...">
                        </div>
                    </div>


                </div>

            </div>
        </form>
    </div>

</div>




<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
    $('#CID').bind('change', function () {
        alert('This file size is: ' + this.files[0].size / 1024 / 1024 + "MiB");
    });
</script>




