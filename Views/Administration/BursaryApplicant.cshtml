@model IEnumerable<object>

@{
    List<_18TWENTY8.Models.FinancialSupport> FS = Model.ToList()[0] as List<_18TWENTY8.Models.FinancialSupport>;
    List<_18TWENTY8.Models.BursaryApplication> BA = Model.ToList()[1] as List<_18TWENTY8.Models.BursaryApplication>;
    List<_18TWENTY8.Models.ApplicationStatus> AS = Model.ToList()[2] as List<_18TWENTY8.Models.ApplicationStatus>;



}


<div role="main" class="main">

    <section class="page-header page-header-modern bg-color-light-scale-1 border-0 m-0 page-header-md">
        <div class="container">
            <div class="row">

                <div class="col-md-12 align-self-center p-static order-2 text-center">


                </div>

                <div class="col-md-12 align-self-center order-1">


                </div>
            </div>
        </div>
    </section>

    <div class="container py-4">
        <div class="col">
            <div class="row">
                <div class="col text-center">
                    <h2 style="color:#a62237" class="font-weight-normal mb-5"><strong class="font-weight-extra-bold">Administration case management</strong><strong class="font-weight-extra-bold"></strong></h2>
                </div>
            </div>
        </div>
    </div>

</div>




<div class="row">
    <div class="col-lg-2">
        <aside class="sidebar">

            <h5 class="font-weight-semi-bold pt-4">Administration</h5>
            <ul class="nav nav-list flex-column mb-5">
                <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="AdminLanding">View Big sister programme page</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="BursaryCapture">Capture Bursaries</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Administration" asp-action="DetailsBurs">View Bursary list</a></li>



            </ul>
        </aside>
    </div>
    <div class="col-lg-10">

        <div class="tabs tabs-bottom tabs-center tabs-simple">
            <ul class="nav nav-tabs">
                <li class="nav-item active">
                    <a class="nav-link" href="#tabsNavigationSimple1" data-toggle="tab">Pending profile approval Bursary Applicant</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#tabsNavigationSimple2" data-toggle="tab">Bursary Applications</a>
                </li>


            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tabsNavigationSimple1">
                    <div role="main" class="main shop py-4">

                        <div class="container">

                            <div class="row">
                                <div class="col">

                                    <div class="featured-boxes">
                                        <div class="row">
                                            <div class="col">
                                                <div class="featured-box featured-box-primary text-left mt-2">
                                                    <div class="box-content">
                                                        <form method="post" action="">
                                                            <table class="shop_table cart">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="product-name">
                                                                            Picture
                                                                        </th>
                                                                        <th class="product-name">
                                                                            Name
                                                                        </th>
                                                                        <th class="product-name">
                                                                            Surname
                                                                        </th>
                                                                        <th class="product-name">
                                                                            View Profile
                                                                        </th>
                                                                        <th class="product-name">
                                                                            Status
                                                                        </th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @{var allowedStatus = new[] { 1, 3, 6 };}
                                                                    @foreach (var item in FS.Where(x => allowedStatus.Contains(x.ApplicationStatusID)))
                                                                    {
                                                                        <tr class="cart_table_item">
                                                                            <td class="product-name">
                                                                                <a href="shop-product-sidebar-left.html">
                                                                                    <img width="100" height="100" alt="" class="img-fluid" src="~/Uploads/ProimagesLilsis/@item.Imgurl">
                                                                                </a>
                                                                            </td>
                                                                            <td class="product-name">
                                                                                @item.Name
                                                                            </td>
                                                                            <td class="product-name">
                                                                                @item.Surname
                                                                            </td>
                                                                            <td class="product-name">
                                                                                <button asp-controller="FinancialSupport" asp-route-id="@item.UserID" asp-action="Details" type="submit" class="btn btn-primary btn-with-arrow mb-2">View Profile<span><i class="fas fa-chevron-right"></i></span></button>
                                                                            </td>
                                                                            <td class="product-name">

                                                                                <p><em>@AS.Where(x => x.ApplicationStatusID == item.ApplicationStatusID).SingleOrDefault().description</em></p>
                                                                            </td>

                                                                        </tr>
                                                                    }


                                                                </tbody>
                                                            </table>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="tabsNavigationSimple2">
                    <div role="main" class="main shop py-4">

          
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
