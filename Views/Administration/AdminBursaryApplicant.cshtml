                            <strong style="color:white" class="process-step-circle-content">1</strong>
                        </div>
                        <div class="process-step-content">
                            <ul class="list list-icons">
                                <li id="big-sis-phase-2"><i class="fas fa-check"></i> Registration incomplete</li>
                            </ul>
                        </div>
                    </div>
                }
                @if (Model.finsupport.ApplicationStatusID == 4)
                {
