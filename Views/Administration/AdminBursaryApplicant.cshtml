        <div id="little-sister-profile-wrapper" class="container py-2">
            <form asp-action="Detail" role="form" class="needs-validation" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-10">
                        <div class="row">

                            <div class="col-lg-3 mt-4 mt-lg-0">

                                <div class="d-flex justify-content-center mb-4">
                                    <div class="profile-image-outer-container">
                                        <div class="profile-image-inner-container bg-color-primary">
                                            <img src="~/Uploads/ProimagesLilsis/@Model.finsupport.Imgurl">

                                        </div>

                                    </div>

                                </div>




                            </div>
                            <div class="col-lg-9 litte-sister-profile-wrapper">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="overflow-hidden mb-1">
                                            <h2 class="font-weight-normal text-7 mb-0"><strong class="font-weight-extra-bold">@Model.finsupport.Name @Model.finsupport.Surname</strong>s Profile</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">

                                    </div>
                                </div>

                                <div class="accordion" id="accordion">
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h4 class="card-title m-0">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse1One">
                                                    Personal Information
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapse1One" class="collapse show">
                                            <div class="card-body">
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Name</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.Name</p>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Surname</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.Surname</p>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Nickname / Preferred name</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.Nickname</p>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">ID / Passport number</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.IdNr_Passport</p>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Date of birth</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.DOB</p>
                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h4 class="card-title m-0">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse1Two">
                                                    Contact Information
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapse1Two" class="collapse show">
                                            <div class="card-body">
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Email</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.Email</p>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-12 font-weight-bold text-dark col-form-label form-control-label text-2 required">Contact number(Cell)</label>
                                                    <div class="col-lg-12">
                                                        <p>@Model.finsupport.CellphoneNr</p>
                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>

                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h4 class="card-title m-0">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse1Four">
                                                    Documents
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapse1Four" class="collapse show">
                                            <div class="card-body">
                                                <table class="table table-sm table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Document Name</th>
                                                            <th scope="col">Created</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbl-sister-documents">
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Certified ID</th>
                                                            <th scope="col">@Model.finsupport.DateCreated</th>
                                                            <th scope="col"><a href="~/Uploads/CertifiedID/@Model.finsupport.CertifiedID">View</a></th>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">CV</th>
                                                            <th scope="col">@Model.finsupport.DateCreated</th>
                                                            <th scope="col"><a href="~/Uploads/CV/@Model.finsupport.CVurl">View</a></th>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Motivational Video</th>
                                                            <th scope="col">@Model.finsupport.DateCreated</th>
                                                            <th scope="col"><a href="~/Uploads/CVVideo/@Model.finsupport.VideoURl">View</a></th>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Academic Transcript</th>
                                                            <th scope="col">@Model.finsupport.DateCreated</th>
                                                            <th scope="col"><a href="~/Uploads/Qualifications/@Model.finsupport.Academictranscript">View</a></th>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Proof of registration</th>
                                                            <th scope="col">@Model.finsupport.DateCreated</th>
                                                            <th scope="col"><a href="~/Uploads/POR/@Model.finsupport.Proofofregoistrationurl">View</a></th>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Fee Statement</th>
                                                            <th scope="col">@Model.finsupport.DateCreated</th>
                                                            <th scope="col"><a href="~/Uploads/FeeStatements/@Model.finsupport.LatestStatementfees">View</a></th>
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2" style="margin-top: 50px;">

                    </div>
                </div>
            </form>
        </div>
   

</div>
