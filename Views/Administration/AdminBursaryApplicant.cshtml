                <div style="background-color:#a62237;color:white" class="process-step-circle">
                    <strong style="color:white" class="process-step-circle-content">2</strong>
                </div>
                <div class="process-step-content">
                    <ul class="list list-icons">
                        <li><i class="fas fa-check"></i> Profile Approved</li>
                    </ul>
                </div>
            </div>
                }
                else

                {
                    <div class="process-step col-lg-4 mb-5 mb-lg-4 appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="600">
                        <div style="background-color:#a62237;color:white" class="process-step-circle">
                            <strong style="color:white" class="process-step-circle-content">2</strong>
                        </div>
                        <div class="process-step-content">
                            <ul class="list list-icons">
                                <li><i class="fas fa-exclamation"></i> @Model.Appstatus</li>
                            </ul>
                        </div>
                    </div>


                }
                @if (Model.finsupport.ApplicationStatusID == 4)
                {
            <div class="process-step col-lg-4 mb-5 mb-lg-4 appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="1000">
                <div style="background-color:#a62237;color:white" class="process-step-circle">
                    <strong style="color:white" class="process-step-circle-content">3</strong>
                </div>
                <div class="process-step-content">
                    <ul class="list list-icons">
                        <li><i class="fas fa-check"></i> Access to bursary schemes</li>
                    </ul>
                </div>
            </div>
                }
                else

                {
                    <div class="process-step col-lg-4 mb-5 mb-lg-4 appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="600">
                        <div style="background-color:#a62237;color:white" class="process-step-circle">
                            <strong style="color:white" class="process-step-circle-content">3</strong>
                        </div>
                        <div class="process-step-content">
                            <ul class="list list-icons">
                                <li><i class="fas fa-exclamation"></i> No access to bursary schemes as yet</li>
                            </ul>
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>

    <div id="little-sister-profile-wrapper" class="container py-2">
        <form asp-action="Detail" role="form" class="needs-validation" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-10">
                    <div class="row">

                        <div class="col-lg-3 mt-4 mt-lg-0">

                            <div class="d-flex justify-content-center mb-4">
                                <div class="profile-image-outer-container">
                                    <div class="profile-image-inner-container bg-color-primary">
                                        <img src="~/Uploads/ProimagesLilsis/@Model.finsupport.Imgurl">

                                    </div>

                                </div>

                            </div>




                        </div>
                        <div class="col-lg-9 litte-sister-profile-wrapper">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="overflow-hidden mb-1">
                                        <h2 class="font-weight-normal text-7 mb-0"><strong class="font-weight-extra-bold">@Model.finsupport.Name @Model.finsupport.Surname</strong>s Profile</h2>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div id="action-button-wrapper" style="margin-left:36px">
                                        @if (Model.finsupport.ApplicationStatusID == 3)
                                        {
                                            <button  asp-route-userID="@Model.finsupport.UserID" asp-route-Appstatus="4" asp-controller="Administration" asp-action="AdminBursaryCreate" data-user-id="@Model.finsupport.UserID" data-action="Approved" id="btn-approve-profile" class="btn btn-success mb-2"><i class="fas fa-thumbs-up"></i> Approve</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelsent" data-role="Big Sister (Mentor)" data-user-id="@Model.finsupport.UserID" data-action="Sent for Correction" id="btn-correct-profile" class="btn btn-info mb-2"><i class="fas fa-reply"></i> Send for correction</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelDec" data-user-id="@Model.finsupport.UserID" data-action="Declined" id="btn-decline-profile" class="btn btn-primary mb-2"><i class="fas fa-thumbs-down"></i> Decline</button>
                                        }
                                        else if (Model.finsupport.ApplicationStatusID == 4)
                                        {
                                            <button  asp-route-userID="@Model.finsupport.UserID" asp-route-Appstatus="4" asp-controller="Administration" asp-action="AdminBursaryCreate" style="cursor:default" disabled class="btn btn-success mb-2" id="btn-approve-profile"><i class="fas fa-thumbs-up"></i> Approve</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelsent" data-user-id="@Model.finsupport.UserID" data-action="Sent for Correction" id="btn-correct-profile" class="btn btn-info mb-2"><i class="fas fa-reply"></i> Send for correction</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelDec" data-user-id="@Model.finsupport.UserID" data-action="Declined" id="btn-decline-profile" class="btn btn-primary mb-2"><i class="fas fa-thumbs-down"></i> Decline</button>
                                        }
                                        else if (Model.finsupport.ApplicationStatusID == 5)
                                        {
                                            <button onclick="return false" asp-route-userID="@Model.finsupport.UserID" asp-route-Appstatus="4" asp-controller="Administration" asp-action="AdminBursaryCreate" data-user-id="@Model.finsupport.UserID" data-action="Approved" id="btn-approve-profile" class="btn btn-success mb-2"><i class="fas fa-thumbs-up"></i> Approve</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelsent" data-user-id="@Model.finsupport.UserID" data-action="Sent for Correction" id="btn-correct-profile" class="btn btn-info mb-2"><i class="fas fa-reply"></i> Send for correction</button>
                                            <button onclick="return false" style="cursor:default" data-target="#statusreasonmodel" disabled id="btn-decline-profile" class="btn btn-primary mb-2"><i class="fas fa-thumbs-down"></i> Decline</button>
                                        }
                                        else if (Model.finsupport.ApplicationStatusID == 6)
                                        {
                                            <button asp-route-userID="@Model.finsupport.UserID" asp-route-Appstatus="4" asp-controller="Administration" asp-action="AdminBursaryCreate" data-user-id="@Model.finsupport.UserID" data-action="Approved" id="btn-approve-profile" class="btn btn-success mb-2"><i class="fas fa-thumbs-up"></i> Approve</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelsent" disabled id="btn-correct-profile" class="btn btn-info mb-2"><i class="fas fa-reply"></i> Send for correction</button>
                                            <button onclick="return false" data-toggle="modal" data-target="#statusreasonmodelDec" data-user-id="@Model.finsupport.UserID" data-action="Declined" id="btn-decline-profile" class="btn btn-primary mb-2"><i class="fas fa-thumbs-down"></i> Decline</button>
                                        }

                                    </div>
                                </div>
