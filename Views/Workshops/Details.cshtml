@model _18TWENTY8.Models.Workshops

@{
    ViewData["Title"] = "Details";
}
    <div role="main" class="main">
        <section class="page-header page-header-modern bg-color-light-scale-1 border-0 m-0 page-header-md">
            <div class="container">
                <div class="row">

                    <div class="col-md-12 align-self-center p-static order-2 text-center">


                    </div>

                    <div class="col-md-12 align-self-center order-1">


                    </div>
                </div>
            </div>
        </section>
        <div class="container py-4">

            <div class="row">
                <div class="col">
                    <div class="blog-posts single-post">

                        <article class="post post-large blog-single-post border-0 m-0 p-0">
                            <div class="post-image ml-0">
                                <a href="blog-post.html">
                                    @if (Model.WorkshopFileTypeID == 3)
                                    {
                                        <img src="~/Uploads/Workshops/Nomedia.png" class="img-fluid img-thumbnail img-thumbnail-no-borders rounded-0" alt="" />
                                    }
                                    else if (Model.WorkshopFileTypeID == 2)
                                    {
                                        <div class="embed-responsive embed-responsive-16by9">
                                            <iframe class="embed-responsive-item" src="@Html.DisplayFor(model => model.fileurl)" allowfullscreen></iframe>
                                        </div>

                                    }
                                    else

                                    { <div class="embed-responsive embed-responsive-16by9">
                                            <iframe class="embed-responsive-item" src="@Html.DisplayFor(model => model.fileurl)" allowfullscreen></iframe>
                                        </div>
                                    }
                                </a>
                            </div>

                            <div class="post-date ml-0">
                                <span class="day">@Html.DisplayFor(model => model.DateCreated.Day)</span>
                                <span class="month">@Html.DisplayFor(model => model.DateCreated.Month)</span>
                                <span class="month">@Html.DisplayFor(model => model.DateCreated.Year)</span>

                            </div>

                            <div class="post-content ml-0">

                                <h2 class="font-weight-bold"><a href="blog-post.html">@Html.DisplayFor(model => model.WorkshopTitle)</a></h2>

                                <div class="post-meta">
                                    <span><i class="far fa-user"></i> By <a href="#">18twenty Admin</a> </span>
                                    <span><i class="far fa-folder"></i>  <a href="#">Workshops</a> </span>
                          
                                </div>

                                @Html.Raw(Model.WorkshopContent)

                                <div class="post-block mt-5 post-share">
                                    <h4 class="mb-3">Share this Post</h4>

                                    <!-- AddThis Button BEGIN -->
                                    <div class="addthis_toolbox addthis_default_style ">
                                        <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                                        <a class="addthis_button_tweet"></a>
                                        <a class="addthis_button_pinterest_pinit"></a>
                                        <a class="addthis_counter addthis_pill_style"></a>
                                    </div>
                                    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-50faf75173aadc53"></script>
                                    <!-- AddThis Button END -->

                                </div>


                            </div>
                        </article>

                    </div>

                </div>
                </div>
            </div>


        </div>

